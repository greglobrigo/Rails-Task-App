<div class="category-show-container">
  <%= link_to categories_path do%>
    <button class="back-button">Back to task categories</button>
  <%end%>
  <div class="category-show-title-container">
    <div class="category-show-title">
      <h1><%= @category.title %></h1>
    </div>
    <div>
      <%= link_to edit_category_path(@category) do%>
        <button class="edit-category-button">
          Edit Category Name
        </button>
      <%end%>
      <%= link_to category_path(@category), method: :delete, data: { confirm: 'Are you sure?' } do%>
        <button class="delete-category-button">
          Delete Category
        </button>
      <%end%>
    </div>
  </div>
  <div class="tasks-show-title-container">
    <div class="tasks-show-title">
      <h1>Tasks</h1>
    </div>
    <div>
      <%=link_to new_category_task_path(@category) do%>
        <button class="add-task-button">
          Add Task
        </button>
      <%end%>
    </div>
  </div>
  <table class="tasks-table">
    <thead>
      <tr style="text-align: center">
        <th>Name</th>
        <th>Body</th>
        <th>Task Date</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <%@tasks.each do |task|%>
        <tr style="text-align: center">
          <td><%= task.name %></td>
          <td><%= task.body %></td>
          <td><%= task.task_date %></td>
          <td><button class="edit-task-button"><%=link_to 'Edit', edit_category_task_path(@category, task)%></button></td>
          <td><button class="delete-task-button"><%=link_to 'Delete', category_task_path(@category, task), :method => :delete, data: { confirm: 'Are you sure?' }%></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
