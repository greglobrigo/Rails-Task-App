<div class="devise-forgot-password">
  <div class="forgot-password-img-container">
    <div class="forgot-password-img">
      <%= image_tag("forgotpassword.svg", :alt => "blog-img") %>
    </div>
  </div>
  <div class="forgot-password-form">
    <div>
      <h2>Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      <% end %>
      <div>
        <button class="disabled">Send me reset password instructions</button>
      </div>
      <p><em>(Feature not yet implemented)</em></p>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
